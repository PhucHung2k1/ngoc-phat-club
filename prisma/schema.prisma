generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  phone     String?
  role      String   @default("member")
  roleId    String?
  roleRef   Role?    @relation(fields: [roleId], references: [id])
  imageUrl  String?
  dupr      Float?
  createdAt DateTime @default(now())
  bookings  Booking[]
}

model Role {
  id     String  @id @default(cuid())
  name   String
  slug   String  @unique
  users  User[]
}

model Court {
  id        String  @id @default(cuid())
  name      String
  location  String?
  slots     CourtSlot[]
}

model CourtSlot {
  id        String   @id @default(cuid())
  courtId   String
  court     Court    @relation(fields: [courtId], references: [id])
  date      DateTime
  startTime DateTime
  endTime   DateTime
  status    String   @default("available")
  bookings  Booking[]

  @@index([courtId, date])
}

model Booking {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id])
  courtSlotId String    @unique
  courtSlot   CourtSlot @relation(fields: [courtSlotId], references: [id])
  status      String    @default("confirmed")
  createdAt   DateTime  @default(now())
}
